@model List<Kiralama>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

    <div class= "container">
        <div class="row pt-3 pb-4"
         <div>
        <h1>Kitap Kiralamaları </h1>
        </div>
     </div>

    <table class="table table-bordered">
        <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            OgrenciId       
            </th>
                <th>
                    KitapId
                </th>
        <th>

        </th>
         <th>
         </th>
    </tr>
        </thead>

    <tbody>
        @foreach(var kiralama in Model)  // Model üzerindki bilgileri alıp view katmanına gönderir ardından html kodlarına çevirerek sunucuya gönderir.
        {
            <tr>
                <td>@kiralama.Id</td>
                    <td>@kiralama.OgrenciId</td>
                    <td>@kiralama.Kitap.KitapAdi</td>


                <td>
               <a a asp-controller = "Kiralama" asp-action = "EkleGuncelle"  asp-route-id="@kiralama.Id" type= "button" class = "btn btn-success" style="width:250px">Güncelle</a>
                    </td>
                    <td>
                        <a a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" type="button" class="btn btn-danger" style=" width: 250px">Sil</a>
                    </td>
            </tr>
        }
    </tbody>
    </table>
    <div class="row pt-3 pb-2"
    <div>
        <a asp-controller="Kiralama"asp-action="EkleGuncelle" class="btnalign-content-lg-around btn-primary" type="button">
            Yeni Kiralama Kaydı Oluştur
        </a>
    </div>
    </div>